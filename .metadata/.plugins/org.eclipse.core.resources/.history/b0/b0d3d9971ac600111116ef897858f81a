package Ch2
import java.util.List;

public class Ch2_1 {
    public void resetCrossIfZero(Matrix m) {
        List<Integer> size = m.getSize();
        int row_limit = size.get(0);
        int column_limit = size.get(1);
        List<Integer> rows = new List<Integer>();
        List<Integer> columns = new List<Integer>();

        for (int i = 0; i < row_limit; i++) {
            for (int j = 0; j < column_limit; j++) {
                if (m.get(i,j) == 0.0) {
                    rows.add(i);
                    columns.add(j);
                }
            }
        }
        
        for (int i = 0; i < rows.size(); i++) {
            m.resetCross(rows.get(i), columns.get(i));
        }
    }
}


