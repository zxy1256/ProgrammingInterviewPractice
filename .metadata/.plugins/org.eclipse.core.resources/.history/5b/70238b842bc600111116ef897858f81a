package Ch2;

import java.util.List;

public class Ch2_3 {
	
	public int maxSubListSum(List<Integer> l) {
		if (l == null) {
			throw new IllegalArgumentException();
		}
		if (l.isEmpty()) {
			return 0;
		}
		
		int start = 0;
		int max_sum = 0;
		while (start < l.size()) {
			end = start;
			
			while (end < l.size()) {
				if (max_sum+l.get(end) >= 0) {
					max_sum += l.get(end);
					end++;
				} else {
					break; 
				start = end+1;
			}
		}
	}

}
